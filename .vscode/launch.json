  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "vm launch",
      "program": "${workspaceFolder}/bin/ccfoo-vm.js", "args": ["launch", "-n", "bastion"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "completion",
      "program": "${workspaceFolder}/bin/ccfoo.js",
      "args": ["completion",  "--", "ccfoo", "config", "se"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "-u",
        "tdd",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/test"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "doit",
      "program": "${workspaceFolder}/lib/tans.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ccfoo --help",
      "program": "${workspaceFolder}/bin/ccfoo.js",
      "args": ["-h"]
    }
  ]
}
