{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "try",
            "program": "${workspaceFolder}/tests/try.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "vm-list",
            "program": "${workspaceFolder}/bin/ccfoo-vm-show.js",
            "args": [
                "-n", 
                "ci"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/tests/test"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program-help",
            "program": "${workspaceFolder}/bin/ccfoo.js",
            "args": [
                "--help"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/bin/ccfoo.js"
        }
    ]
}